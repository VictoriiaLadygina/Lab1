#include <stdio.h>
#include <stdlib.h>

int main()
{
    char arr[4] = {'a', 'b', 'c', 'd'};
    char *p = arr;
    char *k = arr;
    for (int i = 0; i < 4; i++ )
    {
        printf("%c ", *(p + i));
    }
    printf("\n");
    //free
    for (int i = 0; i < 4; i++ )
    {
        printf("%c ", *(k + i));
    }
    printf("\n");
    free(*k);
    //проверка на освобождение памяти
    /*for (int i = 0; i < 4; i++ )
    {
        printf("%c ", *(k + i));
    }*/


    return 0;
}
